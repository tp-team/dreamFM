<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_height="128dp"
        android:layout_width="fill_parent">

        <ImageView
            android:id="@+id/event_card_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="false"
            android:src="@drawable/hollyundead2"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:background="#B3000000"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_card_month"
                    android:layout_width="42dp"
                    android:layout_height="16dp"
                    android:singleLine="true"
                    android:background="#D51007"
                    android:text="NOV"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"/>

                <TextView
                    android:id="@+id/event_card_day"
                    android:layout_width="42dp"
                    android:layout_height="26dp"
                    android:singleLine="true"
                    android:background="#FFFFFF"
                    android:text="1"
                    android:textColor="#333333"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_marginLeft="1dp"
                    android:layout_marginStart="1dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/event_card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Hollywood Undead"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:id="@+id/event_card_place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="Ray Just Arena, Moscow, Russia"
                    android:textColor="#CCFFFFFF"
                    android:textSize="12sp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/event_card_fan3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fan3"
            android:alpha="0.8"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="48dp"
            />

        <ImageView
            android:id="@+id/event_card_fan2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fan2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="48dp"
            />

        <ImageView
            android:id="@+id/event_card_fan1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fan1"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="68dp"
            android:layout_marginEnd="68dp"
            android:layout_marginBottom="48dp"
            />

        <TextView
            android:id="@+id/event_card_attendance"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="126"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="48dp"
            />

    </RelativeLayout>

</LinearLayout>