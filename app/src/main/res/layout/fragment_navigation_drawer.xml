<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationDrawerFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:id="@+id/user_bd_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/user_bd_image"
            android:src="@drawable/mail2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:id="@+id/user_photo"
            android:layout_height="64dp"
            android:layout_width="64dp"
            android:scaleType="matrix"
            android:src="@drawable/user"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
            <!--android:background="@drawable/user_photo"-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="90dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Egor Susekov"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                />

            <TextView
                android:id="@+id/plays_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="666 plays since 13 Jun 2013"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                />

        </LinearLayout>
    </RelativeLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recommendations_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:choiceMode="singleChoice"
        android:textColor="#ffffff"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:background="#262626"
        tools:context=".NavigationDrawerFragment" />


</LinearLayout>


